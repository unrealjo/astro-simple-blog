---
import menu from "../config/menu.json";
---

<nav class="navbar w-100 navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">MyBlog</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarColor01"
      aria-controls="navbarColor01"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        {
          menu.map((link) => (
            <li id="nav-item">
              <a title="nav link" class="nav-link" href={link.path}>
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
      <form class="d-flex">
        <input
          class="form-control me-sm-2"
          type="search"
          placeholder="Search"
        />
        <button class="btn btn-secondary my-2 my-sm-0" type="submit"
          >Search</button>
      </form>
    </div>
  </div>
</nav>
<script>
  const activelinks: NodeListOf<HTMLAnchorElement> =
    document.querySelectorAll("#nav-item a")!;
  activelinks.forEach((link) => {
    if (link.getAttribute("href") == window.location.pathname) {
      link.className = `active ${link.classList.toString()}`;
    }
  });
</script>
<script type="text/partytown" src="/js/bootstrap.js"></script>
